#!/bin/bash

# show-version.sh - 用于显示当前版本号的脚本

VERSION_FILE=$(wzsh-go-version-file)
if [ -z "$VERSION_FILE" ]; then
    exit 1
fi

# 获取当前版本号
VERSION=$(grep -E 'var Version = "([^"]+)"' "$VERSION_FILE" | sed -E 's/.*"([^"]+)".*/\1/')

if [ -z "$VERSION" ]; then
    echo "错误：无法从 $VERSION_FILE 文件中提取版本号"
    exit 1
fi

echo "当前版本号: $VERSION"
echo "对应的 Git 标签: v$VERSION"
